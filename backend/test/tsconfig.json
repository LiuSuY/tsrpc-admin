{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@": ["./src"]
    }
  },
  "include": ["."]
}
